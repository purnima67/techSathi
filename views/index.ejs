  <section class="hero">
    <div class="container">
      <h2>Welcome to TechSathi</h2>
      <p>Your gateway to the best tech events in Pokhara and beyond.</p>
      <a href="#upcoming-events" class="btn-primary">See Upcoming Events</a>
    </div>
  </section>

  <main>
    <section id="upcoming-events" class="events-section container">
      <h2>Upcoming Events</h2>
      <div class="events-grid">
        <% if (events && events.length > 0) { %>
          <% events.forEach(event => { %>
            <article class="event-card">
              <h3><%= event.name %></h3>
              <p><strong>Date:</strong> <%= event.date %></p>
              <p><strong>Time:</strong> <%= event.time %></p>
              <a href="#" class="btn-secondary">More Details</a>
            </article>
          <% }) %>
        <% } else { %>
          <p>No upcoming events at the moment. Check back soon!</p>
        <% } %>
      </div>
    </section>
  </main>

  <footer class="site-footer">
    <div class="container">
      <p>© 2025 TechSathi. All rights reserved.</p>
      <p>Made with ❤️ in Pokhara</p>
    </div>
  </footer>
</body>
